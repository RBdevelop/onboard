<% content_for :company do %>
  Company Dashboard
<% end %>

<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="Welcome" data-view="Text" data-title="Howdy!" data-text="Welcome to OnBoard IO !." data-moreinfo=" Lets get your team setup and check progess "style="background-color:#d6bf0a"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
